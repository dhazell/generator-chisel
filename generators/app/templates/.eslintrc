{
  "extends": "chisel",
  "overrides": [
    {
      "files": [
        "gulpfile.js",
        "gulp/**/*.js",
        "build/**/*.js",
        "postcss.config.js",
        "webpack.config.js",
        "webpack.chisel.config.js"
      ],
      "parserOptions": {
        "sourceType": "script"
      },
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          { "devDependencies": true }
        ],
        "no-console": "off",
        "class-methods-use-this": "off",
        "no-param-reassign": "off"
      },
      "env": {
        "node": true
      }
    }
  ]
}
